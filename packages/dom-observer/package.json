{
  "name": "@barocss/dom-observer",
  "version": "0.1.0",
  "description": "DOM mutation observer with text change detection and collaborative editing support",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    },
    "files": [
      "dist"
    ],
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mutation-observer",
    "dom-observer",
    "text-change-detection",
    "collaborative-editing",
    "dom-mutations"
  ],
  "author": "Barocss Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.24",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@barocss/text-analyzer": "workspace:*"
  }
}
